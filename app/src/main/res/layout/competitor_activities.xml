<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="90dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Select Company"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/company"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Select Product"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/product"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Select SKU"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sku"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Select Outlet"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/outlet"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Select Sub Outlet"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/suboutlet"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Enter price offer"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/priceOffer"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginBottom="9dp"
                android:padding="7dp"
                android:inputType="number"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Enter mechanics"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mechanics"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="7dp"
                android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Enter start date"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/startDate"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:textColor="#000"
                android:editable="false"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:padding="7dp"
                android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Enter end date"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/endDate"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:textColor="#000"
                android:padding="7dp"
                android:textStyle="bold"
                android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/addCompetitor"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"

        android:background="@color/buttonColor">

        <TextView
            android:id="@+id/addcustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SUBMIT"
            android:textColor="#FFF"
            android:textSize="19sp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>